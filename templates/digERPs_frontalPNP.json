{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/francesco-vespignani/digERPs/master/templates/digERPs_frontalPNP.json",
    "type": "object",
    "title": "A minimal schema template for digERPs",
    "description": "This is a minimal schema template for json annotation of scientific papers within the digERPs project.",
    "additionalProperties": true,
    "required": [
        "paperid",
        "experiments"
    ],
    "properties": {
        "paperid": {
            "$id": "#/properties/paperid",
            "type": "string",
            "title": "paperid",
            "description": "The id of the annotated paper, should be [last author family name][year of publication][first page]."
        },
        "experiments": {
            "$id": "#/properties/experiments",
            "type": "array",
            "title": "An array of Experiments",
            "description": "Papers typically contain multiple experiments, please add an element array for each experiment, information about how to split data into experiments are refereed in the manual.",
            "additionalItems": true,
            "items": {
                "$id": "#/properties/experiments/items",
                "type": "object",
                "title": "An Experiment",
                "description": "Specific annotations about the experiment.",
                "additionalProperties": true,
                "required": [
                    "expname",
                    "eeg",
                    "subjects",
                    "procedure",
                    "data"
                ],
                "properties": {
                    "expname": {
                        "$id": "#/properties/experiments/items/properties/expname",
                        "type": "string",
                        "title": "Name of the experiment",
                        "description": "A label of the form exp[N], where N is an integer. We suggest to keep the original paper number, otherwise add a filed \"note on name\"."
                    },
                    "content": {
                        "$id": "#/properties/experiments/items/properties/content",
                        "type": "string",
                        "title": "Experiment description",
                        "description": "A brief description of the experiment aims and possibly about its role within the aims of the specific secondary research that is currently pursued."
                    },
                    "eeg": {
                        "$id": "#/properties/experiments/items/properties/eeg",
                        "type": "object",
                        "title": "EEG section",
                        "description": "A collection of information about EEG recording and the analysis pipeline for ERPs extraction.",
                        "additionalProperties": true,
                        "required": [
                            "recording reference",
                            "sampling rate",
                            "final Low Pass",
                            "final High Pass",
                            "epoch rejection",
                            "mean rejected",
                            "sites numenclature",
                            "sites",
                            "baseline",
                            "epoch",
                            "hardware",
                            "active electrodes"
                        ],
                        "properties": {
                            "recording reference": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/recording reference",
                                "type": "string",
                                "title": "Recording reference",
                                "description": "The EEG site used for reference electrode during recording (typical value are left/right/linked mastoids, average, Cz)."
                            },
                            "analysis reference": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/analysis reference",
                                "type": "string",
                                "title": "Analysis reference",
                                "description": "Describe the analysis reference in the case a rereference was done otherwise omit this field."
                            },
                            "sampling rate": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/sampling rate",
                                "type": "integer",
                                "title": "Sampling rate",
                                "description": "Samplig rate of the EEG recording in Hz (number of measure per second)."
                            },
                            "final Low Pass": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/final Low Pass",
                                "type": "integer",
                                "title": "Final Low Pass filter",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "final High Pass": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/final High Pass",
                                "type": "integer",
                                "title": "The final High Pass schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "epoch rejection": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/epoch rejection",
                                "type": "string",
                                "title": "The epoch rejection schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "mean rejected": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/mean rejected",
                                "type": "integer",
                                "title": "The mean rejected schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "sites numenclature": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/sites numenclature",
                                "type": "string",
                                "title": "The sites numenclature schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "sites": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/sites",
                                "type": "array",
                                "title": "Recorded Sites",
                                "description": "An array of strings with the labels of the recorded EEG sites/channels .",
                                "additionalItems": true,
                                "items": {
                                    "$id": "#/properties/experiments/items/properties/eeg/properties/sites/items",
                                    "type": "string",
                                    "title": "Channel/site label",
                                    "description": "Label of the channel/site."
                            },
                            "sites 5%": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/sites 5%",
                                "type": "array",
                                "title": "The sites 5% schema",
                                "description": "An explanation about the purpose of this instance.",
                                "additionalItems": true,
                                "items": {
                                    "$id": "#/properties/experiments/items/properties/eeg/properties/sites 5%/items",
                                    "type": "string",
                                    "title": "The items schema",
                                    "description": "An explanation about the purpose of this instance."
                                }
                            },
                            "sites notes": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/sites notes",
                                "type": "string",
                                "title": "The sites notes schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "baseline": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/baseline",
                                "type": "string",
                                "title": "The baseline schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "epoch": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/epoch",
                                "type": "integer",
                                "title": "The epoch schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "hardware": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/hardware",
                                "type": "string",
                                "title": "The hardware schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "active electrodes": {
                                "$id": "#/properties/experiments/items/properties/eeg/properties/active electrodes",
                                "type": "string",
                                "title": "The active electrodes schema",
                                "description": "An explanation about the purpose of this instance."
                            }
                        }
                        }
                    },
                    "subjects": {
                        "$id": "#/properties/experiments/items/properties/subjects",
                        "type": "array",
                        "title": "Subject Groups section",
                        "description": "An array with information about the groups of subjects tested.",
                        "additionalItems": true,
                        "items": {
                            "$id": "#/properties/experiments/items/properties/subjects/items",
                            "type": "object",
                            "title": "A group of subjects",
                            "description": "An explanation about the purpose of this instance.",
                            "additionalProperties": true,
                            "required": [
                                "groupname",
                                "n",
                                "mean age",
                                "age range",
                                "num of females",
                                "language(s) spoken",
                                "descrirption"
                            ],
                            "properties": {
                                "groupname": {
                                    "$id": "#/properties/experiments/items/properties/subjects/items/properties/groupname",
                                    "type": "string",
                                    "title": "Group label",
                                    "description": "A short and possibly informative label of the group of subjects"
                                },
                                "n": {
                                    "$id": "#/properties/experiments/items/properties/subjects/items/properties/n",
                                    "type": "string",
                                    "title": "The n schema",
                                    "description": "An explanation about the purpose of this instance."
                                },
                                "mean age": {
                                    "$id": "#/properties/experiments/items/properties/subjects/items/properties/mean age",
                                    "type": "string",
                                    "title": "The mean age schema",
                                    "description": "An explanation about the purpose of this instance."
                                },
                                "age range": {
                                    "$id": "#/properties/experiments/items/properties/subjects/items/properties/age range",
                                    "type": "string",
                                    "title": "The age range schema",
                                    "description": "An explanation about the purpose of this instance."
                                },
                                "num of females": {
                                    "$id": "#/properties/experiments/items/properties/subjects/items/properties/num of females",
                                    "type": "string",
                                    "title": "The num of females schema",
                                    "description": "An explanation about the purpose of this instance."
                                },
                                "language(s) spoken": {
                                    "$id": "#/properties/experiments/items/properties/subjects/items/properties/language(s) spoken",
                                    "type": "string",
                                    "title": "The language(s) spoken schema",
                                    "description": "An explanation about the purpose of this instance."
                                },
                                "descrirption": {
                                    "$id": "#/properties/experiments/items/properties/subjects/items/properties/descrirption",
                                    "type": "string",
                                    "title": "The descrirption schema",
                                    "description": "An explanation about the purpose of this instance."
                                }
                            }
                        }
                    },
                    "procedure": {
                        "$id": "#/properties/experiments/items/properties/procedure",
                        "type": "object",
                        "title": "Experimental Procedure Section",
                        "description": "A collection of information about the experimental procedure, including stimuli and behavioural tasks.",
                        "additionalProperties": true,
                        "required": [                            "language",
                            "modality",
                            "task",
                            "lists",
                            "word duration",
                            "woa",
                            "conditions"
                        ],
                        "properties": {
                            "language": {
                                "$id": "#/properties/experiments/items/properties/procedure/properties/language",
                                "type": "string",
                                "title": "The language schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "modality": {
                                "$id": "#/properties/experiments/items/properties/procedure/properties/modality",
                                "type": "string",
                                "title": "The modality schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "task": {
                                "$id": "#/properties/experiments/items/properties/procedure/properties/task",
                                "type": "string",
                                "title": "The task schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "lists": {
                                "$id": "#/properties/experiments/items/properties/procedure/properties/lists",
                                "type": "string",
                                "title": "The lists schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "word duration": {
                                "$id": "#/properties/experiments/items/properties/procedure/properties/word duration",
                                "type": "integer",
                                "title": "The word duration schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "woa": {
                                "$id": "#/properties/experiments/items/properties/procedure/properties/woa",
                                "type": "string",
                                "title": "The woa schema",
                                "description": "An explanation about the purpose of this instance."
                            },
                            "conditions": {
                                "$id": "#/properties/experiments/items/properties/procedure/properties/conditions",
                                "type": "array",
                                "title": "Experimental Conditions",
                                "description": "An array with information about the tested experimental conditions.",
                                "additionalItems": true,
                                "items": {
                                    "$id": "#/properties/experiments/items/properties/procedure/properties/conditions/items",
                                    "type": "object",
                                    "title": "An Experimental Condition",
                                    "description": "A collection of informations about a specific experimental condition.",
                                    "additionalProperties": true,
                                    "required": [
                                        "condname",
                                        "cp",
                                        "items",
                                        "description",
                                        "example",
                                        "wp"
                                    ],
                                    "properties": {
                                        "condname": {
                                            "$id": "#/properties/experiments/items/properties/procedure/properties/conditions/items/properties/condname",
                                            "type": "string",
                                            "title": "Condition label",
                                            "description": "A short and possibly informative label of the experimental condition."
                                        },
                                        "cp": {
                                            "$id": "#/properties/experiments/items/properties/procedure/properties/conditions/items/properties/cp",
                                            "type": "string",
                                            "title": "The cp schema",
                                            "description": "An explanation about the purpose of this instance."
                                        },
                                        "items": {
                                            "$id": "#/properties/experiments/items/properties/procedure/properties/conditions/items/properties/items",
                                            "type": "string",
                                            "title": "The items schema",
                                            "description": "An explanation about the purpose of this instance."
                                        },
                                        "description": {
                                            "$id": "#/properties/experiments/items/properties/procedure/properties/conditions/items/properties/description",
                                            "type": "string",
                                            "title": "The description schema",
                                            "description": "An explanation about the purpose of this instance."
                                        },
                                        "example": {
                                            "$id": "#/properties/experiments/items/properties/procedure/properties/conditions/items/properties/example",
                                            "type": "string",
                                            "title": "The example schema",
                                            "description": "An explanation about the purpose of this instance."
                                        },
                                        "wp": {
                                            "$id": "#/properties/experiments/items/properties/procedure/properties/conditions/items/properties/wp",
                                            "type": "string",
                                            "title": "The wp schema",
                                            "description": "An explanation about the purpose of this instance."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "data": {
                        "$id": "#/properties/experiments/items/properties/data",
                        "type": "array",
                        "title": "Data section",
                        "description": "An array of entries corresponding to plotted waveforms with information about where these can be found.",
                        "additionalItems": true,
                        "items": {
                            "$id": "#/properties/experiments/items/properties/data/items",
                            "type": "object",
                            "title": "Waveforms",
                            "description": "Information relative to a group of waveforms pertaining to a pool of sites/channel but to a signle condition and group of subjects. Sites will be a subset of the above field in the eeg section, otherwise add a field \"note on sites\"",
                            "additionalProperties": true,
                            "required": [
                                "condition",
                                "subjects",
                                "time",
                                "figure"
                            ],
                            "properties": {
                                "condition": {
                                    "$id": "#/properties/experiments/items/properties/data/items/properties/condition",
                                    "type": "string",
                                    "title": "Condition label",
                                    "description": "An Condition label instantiated above in the procedure section."
                                },
                                "subjects": {
                                        "$id": "#/properties/experiments/items/properties/data/items/properties/subjects",
                                        "type": "string",
                                        "title": "Group label",
                                        "description": "An Subject Group label instantiated above in the subjects section."
                                    },
                                "time": {
                                    "$id": "#/properties/experiments/items/properties/data/items/properties/time",
                                    "type": "string",
                                    "title": "Time Range",
                                    "description": "The (maximum) time range of the plotted data,  should be in the form \"MIN, MAX\"."
                                },
                                "figure": {
                                    "$id": "#/properties/experiments/items/properties/data/items/properties/figure",
                                    "type": "string",
                                    "title": "Figure label",
                                    "description": "A short label for the  figure from which the specific waveform should be extracted. Should be in the form \"fig[N][A]\", where N  in an integer and A an optional letter (e.g. \"fig1A\").  This label should match both the description in the paper and the name of the image file to be used for the digitalization (e.g \"fig1A.png\"."
                                },
                                "figuredoi": {
                                    "$id": "#/properties/experiments/items/properties/data/items/properties/figuredoi",
                                    "type": "string",
                                    "title": "Figure doi",
                                    "description": "A doi for the specific figure,  if available."
                                },
                                "page": {
                                    "$id": "#/properties/experiments/items/properties/data/items/properties/page",
                                    "type": "string",
                                    "title": "Page number",
                                    "description": "The number of the page in which the figure appears."
                                },
                                "color": {
                                    "$id": "#/properties/experiments/items/properties/data/items/properties/color",
                                    "type": "string",
                                    "title": "Line Color",
                                    "description": "A verbal description of the color in which the waveform appears in the plot."
                                },
                                "type": {
                                    "$id": "#/properties/experiments/items/properties/data/items/properties/type",
                                    "type": "string",
                                    "title": "Line  Type",
                                    "description": "A verbal description of the graphic type of the line (e.g. continuous, dashed, dotted ...)."
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}